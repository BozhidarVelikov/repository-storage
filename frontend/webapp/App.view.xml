<mvc:View
	controllerName="ui5.repositorystorage.App"
	displayBlock="true"
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<App>
		<Page title="Repositories Page">
			<Table
                id="repostiryTable"
                items="{/repositories}" >
                <headerToolbar>
                    <Toolbar>
                        <Title text="Repositories" />
                        <ToolbarSpacer />
                        <Button 
                            text="Verify Secret"
                            visible="{= ${/repositories}.length > 0}"
                            press="onVerifySecretButtonPress" />
                        <Button 
                            text="Add Repository" 
                            press="onRepositoryAddButtonPress" />
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column width="8rem">
                        <Text text="Id" />
                    </Column>
                    <Column>
                        <Text text="Repository" />
                    </Column>
                    <Column
                        width="12rem"
                        demandPopin="true">
                        <Text text="Actions" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{id}" />
                            <Text text="{url}" />
                            <HBox>
                                <items>
                                    <Button 
                                        text="Edit"
                                        press="onRepostiryTableEditRowPress">
                                    </Button>
                                    <Button 
                                        text="Delete"
                                        type="Reject"
                                        press="onRepostiryTableDeleteRowPress">
                                    </Button>
                                </items>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>

            <Dialog 
                id="verifyDialog"
                title="Verify Secrets"
                contentWidth="640px"
                contentHeight="210px" >
                <content>
                    <VBox class="sapUiSmallMargin">
                        <Label text="Url" />
                        <Select
                            id="verifyDialogRepositoryComboBox"
                            selectedKey="{/selectedRepositoryId}"
                            change="onRepositoryChange"
                            items="{/repositories}">
                            <core:Item key="{id}" text="{url}" />
                        </Select>
                        <Label text="Key" />
                        <Select
                            id="verifyDialogSecretKeyComboBox"
                            selectedKey="{/selectedKeyId}"
                            items="{/selectedItem/secrets}">
                            <core:Item key="{id}" text="{secretKey}" />
                        </Select>
                        <Input id="verifyDialogSecretValueInput" />
                    </VBox>
                </content>
                <buttons>
                    <Button 
                        text="Verify"
                        press="onVerifySecretDialogVerifyPress" />
                    <Button
                        text="Cancel"
                        type="Reject"
                        press="onVerifySecretDialogCancelPress" />
                </buttons>
            </Dialog>

            <Dialog 
                id="editDialog"
                title="Edit Repository"
                contentWidth="640px"
                contentHeight="480px"
                escapeHandler=".onEditDialogEscapePress" >
                <content>
                    <VBox class="sapUiSmallMargin">
                        <Label text="Url" />
                        <Input id="urlInput" value="{/selectedItem/url}" />
                        <Table showSeparators="None" items="{/selectedItem/secrets}" >
                            <headerToolbar>
                                <Toolbar>
                                    <Title text="Secrets" />
                                    <ToolbarSpacer />
                                    <Button 
                                        text="Add Secret" 
                                        press="onSecretAddButtonPress" />
                                </Toolbar>
                            </headerToolbar>

                            <columns>
                                <Column>
                                    <Text text="Key" />
                                </Column>
                                <Column>
                                    <Text text="Value" />
                                </Column>
                                <Column
                                    width="100px"
                                    demandPopin="true">
                                    <Text text="Actions" />
                                </Column>
                            </columns>

                            <items>
                                <ColumnListItem visible="{= ${status} !== 'Deleted' }">
                                    <cells>
                                        <VBox>
                                            <Input 
                                                value="{secretKey}" 
                                                visible="{= ${isNew} === true }"
                                                placeholder="Enter secret key"
                                                change="onSecretKeyInputChange" />

                                            <Title 
                                                level="H3"
                                                text="{secretKey}"
                                                visible="{= ${isNew} === false }" />
                                        </VBox>
                                        <Input
                                            class="sapUiTinyMargin"
                                            value="{secretValue}"
                                            change="onSecretValueInputChange"
                                            placeholder="********" />
                                        <Button 
                                            text="Delete"
                                            type="Reject"
                                            press="onSecretDeleteRowPress">
                                        </Button>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </content>
                <buttons>
                    <Button 
                        text="Save"
                        press="onEditDialogSavePress" />
                    <Button
                        text="Cancel"
                        type="Reject"
                        press="onEditDialogCancelPress" />
                </buttons>
            </Dialog>
		</Page>
	</App>
</mvc:View>